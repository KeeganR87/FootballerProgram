<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="16dp"
    android:paddingRight="16dp"
    android:paddingLeft="16dp"
    android:paddingBottom="16dp"
    tools:context="com.example.footballerprogram.StartingActivity">

    <TextView
        android:id="@+id/Welcome"
        android:textSize="36dp"
        android:text="Welcome to the Footballer Program"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/info"
        android:text="This program is used to convert your NCAA players into Madden ready draft classes!!!"
        android:textSize="20dp"
        android:gravity="center"
        android:layout_below="@+id/Welcome"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/ContinueButton"
        android:text="Continue"
        android:textSize="25dp"
        android:layout_below="@+id/info"
        android:layout_marginVertical="100dp"
        android:layout_centerHorizontal="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="StartPageContinueButton"/>

</RelativeLayout>